    <LinearLayout
        android:id="@+id/llMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/curved_back_grey_1"
        android:elevation="10dp"
        android:layout_below="@id/tvDescription"
        android:padding="10dp">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="0.2">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:hint="Firstname"
            android:background="@drawable/curved_back_white"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:hint="Surename"
            android:background="@drawable/curved_back_white"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        </LinearLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@drawable/curved_back_white"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/curved_back_white"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/btnSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign-In"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DADADA"
            android:layout_marginBottom="10dp"/>

        <LinearLayout
            android:id="@+id/llEasysignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llMain2"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:weightSum="0.2">
            <TextView
                android:id="@+id/tvORLogin"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="match_parent"
                android:text="Easy Sign In: "
                android:layout_gravity="center"
                android:gravity="center"
                />
            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/llMain2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/curved_back_grey_1"
        android:elevation="10dp"
        android:layout_below="@id/llMain"
        android:padding="10dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="If you already have an account:"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:background="@drawable/curved_back_white"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:background="@drawable/curved_back_white"
            android:padding="10dp"
            android:layout_margin="8dp"/>
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Login"
            android:padding="10dp"
            android:layout_margin="8dp"/>


    </LinearLayout>



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_below="@+id/llMain"
    android:visibility="gone">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
    <TextView
        android:id="@+id/tvFirstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First name:"
        />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itfirstname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello from android"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tvSurename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name:"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itsurename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello from android"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name:"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello from android"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/tvPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First name:"
            />
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/itpassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hello from android"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textViewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"/>


</LinearLayout>
</RelativeLayout>