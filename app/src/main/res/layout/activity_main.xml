<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".MainActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:src="@drawable/back" />

        <LinearLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:weightSum="1">

            <ImageView
                android:id="@+id/imgDrawer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:src="@drawable/ic_baseline_menu_48" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_weight="0.8" />

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:src="@drawable/ic_baseline_account_circle_64" />



        </LinearLayout>


        <TextView
            android:id="@+id/catTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/topBar"
            android:fontFamily="@font/sourcesansproblack"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:text="Categories"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/activeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/catHorizontalRv"
            android:fontFamily="@font/sourcesansproblack"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:text="Active werooms"
            android:textSize="34sp" />


        <TextView
            android:id="@+id/currentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontalRv"
            android:fontFamily="@font/sourcesansproblack"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:text="Current werooms"
            android:textSize="34sp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/horizontalRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/activeTitle"
            android:scrollbars="none" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/catHorizontalRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/catTitle"
            android:scrollbars="none" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/currentHorizontalRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/currentTitle"
            android:scrollbars="none" />

    </RelativeLayout>
</ScrollView>